import cv2 

image1    = r'myimage.jpg' #add you own file path 
new_image = r'new_img.jpg' #add you own file path 
score_percent = 500

img = cv2.imread(image1,cv2.IMREAD_UNCHANGED)

#calculating the percent 
new_width = int(img.shape[1] * score_percent / 100)
new_height = int(img.shape[0] * score_percent / 100)

#resize the shape 
output = cv2.resize(img , (new_width,new_height))   
cv2.imwrite(new_image,output)

# cv2.imshow("img", src)
cv2.waitKey(0)
cv2.destroyAllWindows()

